<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomePageToolBarStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:background">#19000000</item>
    </style>

    <style name="AppTheme" parent="@style/LightTheme">
        <item name="android:listDivider">@drawable/main_list_divider</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="LightTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItem</item>
        <item name="android:editTextColor">#ff333333</item>
        <item name="actionNormalColor">#39000000</item>
        <item name="blueTextSelector">@color/text_blue_selector</item>
        <item name="contentColor">#ff808080</item>
        <item name="contentColorLight">#ffa0a0a0</item>
        <item name="dateTimeColor">@color/dove_gray</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="recyclerview_style">@style/DefaultRecyclerViewStyle</item>
        <item name="textBackgroundSelector">@drawable/text_background_selector</item>
        <item name="titleColor">#ff333333</item>
        <item name="toolbarNormalColor">@color/white</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorControlActivated">@color/juejin_blue</item>
        <item name="colorControlHighlight">@color/juejin_blue</item>
    </style>

    <style name="DropDownItem" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:textAppearanceInverse</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="DefaultRecyclerViewStyle">
        <item name="android:background">#fff3f3f3</item>
    </style>

    <style name="MainPageTheme" parent="@style/LightTheme">
        <item name="android:listDivider">@drawable/main_list_divider</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/juejin_blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="CategoryTheme" parent="@style/ProfileAppTheme">
        <item name="colorPrimaryDark">@color/theme_primary</item>
    </style>

    <style name="ProfileAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:listDivider">@drawable/main_list_divider</item>
        <item name="actionNormalColor">#39000000</item>
        <item name="contentColor">#ff808080</item>
        <item name="contentColorLight">#ffa0a0a0</item>
        <item name="dateTimeColor">#66666666</item>
        <item name="titleColor">#ff333333</item>
        <item name="toolbarNormalColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="WebViewTheme" parent="@style/LightTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:listDivider">@drawable/main_list_divider</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="WebViewThemeTransStatusBar" parent="@style/WebViewTheme" />

    <style name="hot_new_card_footer">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="NumberProgressBar_Deep_Blue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="progress">0</item>
        <item name="max">100</item>
        <item name="progress_unreached_color">#ffcccccc</item>
        <item name="progress_reached_color">#ff007fff</item>
        <item name="progress_reached_bar_height">1.5dip</item>
        <item name="progress_unreached_bar_height">0.75dip</item>
        <item name="progress_text_size">10.0sp</item>
        <item name="progress_text_color">#ff007fff</item>
    </style>

    <style name="NumberProgressBar_Light_Blue" parent="@style/NumberProgressBar_Deep_Blue">
        <item name="progress_reached_color">#ff18a4ff</item>
        <item name="progress_text_color">#ff18a4ff</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>
</resources>
